{
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": "src",
    // "outDir": "public",
    "declaration": true,
    "declarationMap": false,
    "skipDefaultLibCheck": true,
    "types": ["@webgpu/types", "@types/three", "node"],
    // "typeRoots": ["../../node_modules/@types/d3-selection-multi/index.d.ts"],
    // "target": "ES2015",
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      "chart": ["js/chart.ts"]
    },
    // "allowUmdGlobalAccess": true,
    // "allowSyntheticDefaultImports": true,
    // "allowImportingTsExtensions": true,
    // "noEmit": true,
    "esModuleInterop": true,
    "removeComments": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "assumeChangesOnlyAffectDirectDependencies": true,
    "incremental": true,
    "lib": [ "ES2021", "DOM", "DOM.Iterable"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "config",
    "models",
    "js/chart.ts",
  ]
}