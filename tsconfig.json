{
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": "src",
    "outDir": "dist",
    // "types": ["node"],
    // "typeRoots": ["../../node_modules/@types/d3-selection-multi/index.d.ts"],
    "target": "ES2015",
    "module": "AMD",
    "moduleResolution": "Node",
    "paths": {
      "chart": ["js/chart.ts"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "assumeChangesOnlyAffectDirectDependencies": true,
    "incremental": true,
    "lib": [ "es6", "dom.iterable", "dom"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "config",
    "models"
  ]
}