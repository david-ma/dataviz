{
    "compilerOptions": {
        "baseUrl": "/src/",
        // Perhaps specify which files to process? Whitelist?
        // "paths": {
        //     "chart": [
        //         "/src/js/chart.ts"
        //     ]
        // },
        "target": "es6",
        "module": "commonjs",
        "esModuleInterop": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,

// This might be overwritten by gulpfile
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noUnusedLocals": false
    },
    "include": [
        "src/js"
    ]
}