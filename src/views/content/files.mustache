<style>
  #dataviz_blog.darkmode {
    background: #212728;
    color: #56b9c8;
    {{!-- another highlight color: #1e2c2e --}}
  }


  #treemap {
    svg {
      position: absolute;
      top: 0px;
      left: 0px;
    }
  }

  text {
    fill: rgba(0, 0, 0, 0);

    &:hover {
      fill: rgba(0, 0, 0, 0.5);
    }
  }

  rect {
    stroke-width: 0.1;
    background: rgb(2, 0, 36);
    fill: linear-gradient(72deg, rgba(2, 0, 36, 1) 0%, rgba(9, 9, 121, 1) 35%, rgba(0, 212, 255, 1) 100%) !important;

    &.mouseover {
      fill: red !important;
      stroke-width: 5;
    }
  }

  #legend {
    width: 100%;
  }

  #filestructure {
    float: left;

    p,
    li {
      margin: 0;
    }

    ul {
      padding-left: 1 0px;
      margin: 0;
    }

    summary.folder,
    li.folder {
      font-weight: bold;

      span.foldername {
        flex: auto;
        flex-grow: 1;
      }
    }

    li.file,
    summary.folder,
    li.folder {
      display: flex;
      justify-content: end;

      span.filename,
      span.foldername {
        flex-grow: 1;
      }

      span.filename {
        font-size: 0.8em;

        overflow: scroll;
        white-space: nowrap;
      }

      span.filesize,
      span.fileStatus {
        text-align: right;
        margin-right: auto;
      }

      span.filesize {
        min-width: 100px;
        padding-left: 5px;
      }

      span.status {
        display: inline-block;
        width: 50px;
        text-align: center;
        padding: 2px;
        font-size: 12px;
        text-transform: capitalize;
        font-weight: normal;
        border-radius: 5px;

        &.green {
          color: white;
          background-color: green;
        }

        &.yellow {
          color: black;
          background-color: yellow;
        }

        &.red {
          color: white;
          background-color: red;
        }
      }
    }

    summary {
      cursor: pointer;
    }

    details {
      margin: 0;
      padding: 0;

