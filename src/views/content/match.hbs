<style>
  .card {
    stroke: #000;
    stroke-width: 1;
    &:hover {
      stroke-width: 5;
    }
    &.flipped {
      stroke-width: 5;
      rect {
        opacity: 0.1;
      }
    }

    .card-text {
      font-family: "Courier New", Courier, monospace;
      fill: #000;
      stroke-width: 0;
    }
    .card-text-name {
      font-size: 20px;
    }
  }
</style>

<section class="blogpost">
  <div class="row" id="contentBox">
    <div class="col-xs-12 col-lg-8">
      <div id="description"></div>
      <div id="chart" class="chart"></div>
      {{> showSource }}
    </div>
  </div>
</section>

